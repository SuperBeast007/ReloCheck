<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReloCheck.Views.SpaceAllocation"
             Title="Space Allocation">
    
    <VerticalStackLayout>
        <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="Header">Rooms</Label>
        <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="Header">
            Have the ability to click on rooms to see the items in the room and the amount of itmes in that room.
        </Label>
        <Label></Label>
        <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="Header">Items in Room</Label>
        <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="Header">
            Will show the items in the room with their information and image.
        </Label>
        <Label></Label>
        <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="Header">Relocation Option</Label>
        <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="Header">
            Will give the user the ability to relocate items from different transports or containers.
        </Label>
        
        
        
    </VerticalStackLayout>
</ContentPage>